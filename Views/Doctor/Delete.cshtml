@model Doctor

<h2>Doctor Details</h2>

<div class="card">
    <div class="card-header">
        <h3>@Model.FullName</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Specialization:</dt>
            <dd class="col-sm-9">@Model.Specialization</dd>

            <dt class="col-sm-3">Contact Number:</dt>
            <dd class="col-sm-9">@Model.ContactNumber</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Appointment:</dt>
            <dd class="col-sm-9">@Model.Appointments</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Edit", new { id = Model.DoctorId })" class="btn btn-warning">Edit</a>

        <form asp-action="Delete" method="post" style="display:inline">
            <input type="hidden" name="id" value="@Model.DoctorId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</div>

