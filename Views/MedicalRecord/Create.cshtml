@model clinimanagmanetsystem.Models.MedicalRecord

@{
    ViewData["Title"] = "Create Medical Record";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            margin-top: 30px;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 0.25rem;
            box-shadow: none;
        }

        .btn-custom {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create Medical Record</h2>

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient</label>
                <select asp-for="PatientId" class="form-control">
                    <option value="">Select Patient</option>
                    @if (ViewBag.Patients != null)
                    {
                        foreach (var patient in ViewBag.Patients as List<clinimanagmanetsystem.Models.Patient>)
                        {
                            <option value="@patient.PatientId">@patient.FirstName @patient.LastName</option>
                        }
                    }
                    else
                    {
                        <option value="">No patients available</option>
                    }
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label">Diagnosis</label>
                <input asp-for="Diagnosis" class="form-control" placeholder="Enter diagnosis" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Treatment" class="control-label">Treatment</label>
                <input asp-for="Treatment" class="form-control" placeholder="Enter treatment" />
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-custom">Save</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-custom">Cancel</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
