@model clinimanagmanetsystem.Models.MedicalRecord

<h2>Delete Medical Record</h2>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this record?</h4>
    <p><strong>Patient:</strong> @Model.Patient.FirstName @Model.Patient.LastName</p>
    <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
    <p><strong>Treatment:</strong> @Model.Treatment</p>
    <p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MedicalRecordId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>

