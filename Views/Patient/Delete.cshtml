@model Patient

<h2>Delete Patient</h2>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this patient?</h4>
    <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Medical Record:</strong> @Model.MedicalRecords</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PatientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>

